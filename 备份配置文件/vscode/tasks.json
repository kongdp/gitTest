{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "type": "shell",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "windows": {
                "command": "gcc",
                "args": [
                    "-ggdb",
                    "\"${file}\"",
                    "--std=c11",
                    "-o",
                    "${workspaceRoot}/workspace/${fileBasenameNoExtension}.exe",
                    "-Wall"
                ]
            },
            "linux": {
                "command": "gcc",
                "args": [
                    "-ggdb",
                    "\"${file}\"",
                    "--std=c11",
                    "-lpthread"
                    "-o",
                    "${workspaceRoot}/workspace/${fileBasenameNoExtension}.out",
                    "-Wall"
                ]
            }
        }
    ]
}